<h1>Equipo: <%= @team.name %> </h1>
<%  if policy(@team).edit?  %>
  <%= link_to "Editar", edit_organization_team_path(@organization, @team)%>
<% end %>

<p><strong>Organización: </strong><%= link_to @organization.name, organization_path(@organization)%></p>
<strong>Descripción</strong>
<p><%= @team.description %></p>
<strong>Miembros del Equipo</strong>
<ul>
  <% @team.users.each  do |user| %>
  <li><%= user.email %> </li>
  <% end %>
</ul>
